---
import { Icon } from "astro-icon";

const { links } = Astro.props
---
<footer class="p-4 flex flex-col gap-4">
  <ul class="flex flex-row items-center justify-center gap-4">
    {links.map(({ url, icon }) => (
      <li>
        <a href={url} class="text-secondary-500 hover:text-white-100 transition-all duration-300 delay-100">
          <Icon name={icon} size={34} />
        </a>
      </li>
    ))}
  </ul>

  <div class="text-center text-gray-500">
    <p class="text-sm">
      Designed & Built by Santiago Calvo
    </p>
  </div>
</footer>
