---
import Skill from '../atoms/Skill.astro';

const { skills } = Astro.props;
---
<div id="SkillSet">
	<h2 class="text-3xl text-white mb-4">
		These are my <span class="text-secondary-500">skills</span>:
	</h2>
	<div class="grid grid-cols-1 md:grid-cols-4 gap-4">
		{skills.map((skill) => (
			<Skill {...skill} />
		))}
	</div>
</div>
