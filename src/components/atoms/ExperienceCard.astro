---
import { Icon } from 'astro-icon';
import type Experience from '../../types/Experience';

interface Props {
  experience: Experience;
}

// TODO: Add image as prop
const {
  experience: { title, company, date, description, image, link },
} = Astro.props;
---

<div class="flex text-white" id="Experience">
  <div class="bg-primary-400 shadow-lg rounded-lg p-4">
    <div class="flex justify-between">
      <a
        href={link}
        class="flex items-start justify-start -translate-x-5 lg:-translate-x-9 -translate-y-6 lg:-translate-y-9 w-24 h-24"
      >
        <svg
          viewBox="0 0 94.349997 105.15817"
          version="1.1"
          id="svg156"
          width="94.349998"
          height="105.15817"
          xmlns="http://www.w3.org/2000/svg"
          class="fill-secondary-500 hover:fill-white hover:scale-110 transition-all text-secondary-500"
          <defs
            id="defs160" />
          <g
            id="Capa_2"
            transform="translate(0,0.00294937)">
              <path
                d="M 88.23,21.81 53.29,1.64 a 12.22,12.22 0 0 0 -12.24,0 L 6.12,21.81 A 12.24,12.24 0 0 0 0,32.41 v 40.34 a 12.24,12.24 0 0 0 6.12,10.6 l 34.93,20.17 a 12.27,12.27 0 0 0 12.24,0 L 88.23,83.35 a 12.26,12.26 0 0 0 6.12,-10.6 V 32.41 a 12.26,12.26 0 0 0 -6.12,-10.6 z m -35,48.77 21.61,-13.93 v 5.76 L 53.21,76.35 Z m 29.87,1 -29.89,18.6 V 84.42 L 83.08,65.81 Z M 83.1,43.9 53.21,62.51 V 56.74 L 83.08,38.13 Z"
                id="path132" />
          </g>
        </svg>
        <span class="sr-only">{title}</span>
      </a>

      <div>
        <h2 class="text-end text-xl font-bold">{title} - {company}</h2>
        <p class="text-end text-xs">{date}</p>
      </div>
    </div>
    <div class="flex flex-col gap-2 mt-3">
      {
        description.map((description) => (
          <div class="flex gap-2 justify-start items-start">
            <div class="h-5 py-1">
              <span class="sr-only">{company} Link</span>
              <Icon name="simple-icons:acclaim" height="100%" class="rotate-90" />
            </div>
            <p class="text-md">{description}</p>
          </div>
        ))
      }
    </div>
  </div>
</div>
